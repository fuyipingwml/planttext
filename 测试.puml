ACTOR "管理员" as Admin
ACTOR "支付处理方" as PaymentProcessor
ACTOR "物流合作方" as ShippingPartner

' 用例定义
USECASE "读取产品数据" as UC1
USECASE "读取/写入订单数据" as UC2
USECASE "完全访问用户数据" as UC3
